{
  "version": 2,
  "builds": [
    {
      "src": "api/scrape.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/scrape",
      "methods": ["OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST",
        "Access-Control-Allow-Headers": "Content-Type"
      },
      "status": 204
    },
    {
      "src": "/api/scrape",
      "methods": ["POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      },
      "dest": "/api/scrape"
    }
  ]
}
